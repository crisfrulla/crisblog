<div class="container">
    <div class="row">
    	<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
    		<h1 class="mb20">New post</h1>
			<%= form_for :post, url: posts_path do |f| %>

				<% if @post.errors.any? %>
					<h2><%= pluralize(@post.errors.count, "error") %> prenvented this post from saving</h2>
					<ul>
						<% @post.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
						<% end %>
					</ul>
				<% end %>

				<div class="form-group">

				    <%= f.label :title, "Title:", class: "col-md-1 control-label" %>
				    <div class="col-md-11 mb20">
				        <%= f.text_field :title, class: "form-control" %>
				    </div>
				    <br>
				    <%= f.label :body, "Post:", class: "col-md-1 control-label" %>
				    <div class="col-md-11 mb20">
				        <%= f.text_area  :body, class: "form-control" %>
				    </div>
				    <br>
				    <div class="col-md-11 col-md-offset-1">
				        <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
				    </div>
				    
				</div>
			<% end %>
		</div>
	</div>
</div>




